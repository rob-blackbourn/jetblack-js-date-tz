{
  "name": "@jetblack/date-tz",
  "private": false,
  "version": "1.0.0-alpha.3",
  "description": "Timezone aware date utilities",
  "keywords": [
    "date",
    "timezone",
    "iana",
    "tzdata",
    "tz"
  ],
  "main": "dist/cjs/index.js",
  "browser": "dist/es/index.js",
  "repository": "git@github.com:rob-blackbourn/jetblack-js-date-tz.git",
  "homepage": "https://github.com/rob-blackbourn/jetblack-js-date-tz",
  "bugs": "https://github.com/rob-blackbourn/jetblack-js-date-tz/issues",
  "author": "Rob Blackbourn <rob.blackbourn@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "rimraf dist && rollup -c",
