    "test": "jest",
    "docs:build": "typedoc && cp assets/* docs",
    "docs:serve": "http-server docs"
  },
  "devDependencies": {
    "@jetblack/tzdata": "^0.4.0",
    "@knodes/typedoc-plugin-pages": "^0.22.3",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/jest": "^27.4.1",
    "http-server": "^14.1.0",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^3.25.2",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
